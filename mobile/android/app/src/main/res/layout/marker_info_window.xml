<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_rectangle_bg"
    android:orientation="vertical"
    android:padding="@dimen/margin_smaller">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemLblTownship"
        style="@style/LabelRegularBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Township" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemLblDepartment"
        style="@style/LabelRegularBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Department" />

</androidx.appcompat.widget.LinearLayoutCompat>